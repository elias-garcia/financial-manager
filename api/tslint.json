{
  "extends": [
    "tslint:latest",
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": true,
    "no-any": true,
    "no-unsafe-any": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "member-variable-declaration"
    ],
    "no-unused-expression": true,
    "prefer-readonly": true
  }
}